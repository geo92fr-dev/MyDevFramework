{
  "root": true,
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "browser": true,
    "es2017": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "complexity": ["warn", { "max": 10 }]
  },
  "ignorePatterns": ["*.cjs", "build/", ".svelte-kit/", "dist/", "node_modules/"]
}
